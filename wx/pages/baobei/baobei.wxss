/* pages/baobei/baobei.wxss */
.img {
  text-align: center;
}
image {
  width: 90%;
  height: 600rpx;
}

.content {
  width: 90%;
  margin: 20rpx auto;
  margin-bottom: 20rpx;
  
  color: rgb(33, 33, 163)
}
.content:hover {
  color: orangered;
}
.price {
  width: 100%;
  height: 140rpx;
  background-color: pink;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.fuhao {
  font-weight: bold;
  color: orangered;
}
.money {
  color: red;
  font-size: 16px;
}
.num {
  height: 140rpx;
  display: flex;
  margin-top: 20rpx;
  background-color: pink;
  justify-content: center;
  align-items: center;
}

.jisuan {
  display: inline-block;
  margin-top: 8rpx;
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.one {
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.shop {
  display: flex;
  justify-content: space-around;
}
.buy,.add {
  width: 240rpx;
  margin-top: 20rpx;
  color: white;
  font-weight: bold;
  background-color: orangered;
}
.buy:hover,.add:hover{
  color: orangered;
  background-color: whitesmoke;
}